{{ form_start(form) }}
<div class="row">
    <div class="col-md-4">{{ form_row(form.matricule) }}</div>
    <div class="col-md-4">{{ form_row(form.lastname) }}</div>
    <div class="col-md-4">{{ form_row(form.firstname) }}</div>
</div>
<div class="row">
    <div class="col-md-4">{{ form_row(form.address) }}</div>
    <div class="col-md-4">{{ form_row(form.number) }}</div>
    <div class="col-md-4">{{ form_row(form.salary) }}</div>
</div>
<div class="row">
    <div class="col-md-4">{{ form_row(form.date_of_taking_office) }}</div>
    <div class="col-md-4">{{ form_row(form.duration_of_contract) }}</div>
    <div class="col-md-4">{{ form_row(form.type_of_contract) }}</div>
</div>
{{ form_rest(form) }}
<button class="btn btn-primary">{{ button | default('Enregistrer') }}</button>
{{ form_end(form) }}